<div id="modal-login" class="modal">
  <div class="modal-content">
    <div class="card">
      <div class="card-tabs">
        <ul class="tabs tabs-fixed-width">
          <li class="tab">
            <a class="active" href="#dang-nhap">Đăng Nhập</a>
          </li>
          <li class="tab">
            <a href="#dang-ky">Đăng Ký</a>
          </li>
        </ul>
      </div>

      <!-- Login -->
      <div id="thong-tin">
        <div id="dang-nhap" class="collection">
          <form class="col s12">

            <!-- Nickname -->
            <div class="row">
              <div class="input-field col s10 m8 l6 offset-s1 offset-m2 offset-l3">
                <input id="login-nickname" type="text">
                <label for="login-nickname">Tên Đăng Nhập</label>
              </div>
            </div>

            <!-- Password -->
            <div class="row">
              <div class="input-field col s10 m8 l6 offset-s1 offset-m2 offset-l3">
                <input id="login-password" type="password">
                <label for="login-password">Mật Khẩu</label>
              </div>
            </div>

            <!-- Remember -->
            <div class="row">
              <div class="login-text col s10 m8 l8 offset-s1 offset-m2 offset-l2">
                <div class="row center-align">
                  <div class="col s12 m6 l6">
                    <input type="checkbox" id="login-remember" />
                    <label for="login-remember" class="login-remember">Lưu Đăng Nhập</label>
                  </div>

                  <div class="col s12 m6 l6">
                    <a class="right-align" href="http://locaohost:3000/index">Forgot password ?</a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Button -->
            <div class="row">
              <div class="col s6 offset-s3">
                <p class="text-center center-align">
                  <a href="javascript:void(0)" id="btn-login" data-toggle="collapse" class="btn-login btn btn-default2 animate-box" data-on="Enabled"
                    data-off="Disabled">Đăng Nhập</a>
                </p>
              </div>
            </div>

          </form>
        </div>
      </div>

      <!-- Register -->
      <div id="danh-gia">
        <div id="dang-ky" class="collection">
          <form class="col s12">

            <!-- Nickname -->
            <div class="row">
              <div class="input-field col s10 m8 l6 offset-s1 offset-m2 offset-l3">
                <input id="register-nickname" type="text">
                <label for="register-nickname">Tên Đăng Nhập</label>
              </div>
            </div>

            <!-- Password -->
            <div class="row">
              <div class="input-field col s10 m8 l6 offset-s1 offset-m2 offset-l3">
                <input id="register-password" type="password">
                <label for="register-password">Mật Khẩu</label>
              </div>
            </div>

            <!-- Password -->
            <div class="row">
              <div class="input-field col s10 m8 l6 offset-s1 offset-m2 offset-l3">
                <input id="register-re-password" type="password">
                <label for="register-re-password">Nhập Lại Mật Khẩu</label>
              </div>
            </div>

            <!-- Password -->
            <div class="row">
              <div class="input-field col s10 m8 l6 offset-s1 offset-m2 offset-l3">
                <input id="register-phone" type="text">
                <label for="register-phone">Số Điện Thoại</label>
              </div>
            </div>

            <!-- Password -->
            <div class="row">
              <div class="input-field col s10 m8 l6 offset-s1 offset-m2 offset-l3">
                <input id="register-address" type="text">
                <label for="register-address">Địa Chỉ</label>
              </div>
            </div>

            <!-- Button -->
            <div class="row">
              <div class="col s6 offset-s3">
                <p class="text-center center-align">
                  <a href="javascript:void(0)" id="btn-register" data-toggle="collapse" class="btn-login btn btn-default2 animate-box" data-on="Enabled"
                    data-off="Disabled">Đăng Ký</a>
                </p>
              </div>
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>
</div>