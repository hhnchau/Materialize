<!-- Section: Contact -->
<section id="product-add" class="section section-add grey lighten-3">
    <div class="container">
        <div class="row">
            <div class="card-panel grey lighten-3">

                <h5 class="center flow-text">THÊM MỚI SẢN PHẨM</h5>

                <form id="addForm" enctype="multipart/form-data" action="/admin-add" method="post">
                    
                    <div class="input-field">
                        <input id="product-code" type="text" name="productCode" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Vui lòng nhập mã sản phẩm')" required>
                        <label for="product-code">Mã Sản Phẩm</label>
                    </div>

                    <div class="input-field">
                        <input id="product-name" type="text" name="productName" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Vui lòng nhập ten sản phẩm')" required>
                        <label for="product-name">Tên Sản Phẩm</label>
                    </div>

                    <div class="input-field">
                        <input id="product-category" type="text" name="productCategory" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Vui lòng nhập mã sản phẩm')" required>
                        <label for="product-category">Danh Mục-Chon tu combox</label>
                    </div>

                    <div class="input-field">
                        <input id="product-amount" type="text" name="productAmount" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Vui lòng nhập mã sản phẩm')" required>
                        <label for="product-amount">Số Lượng</label>
                    </div>
                    
                    <div class="input-field">
                        <input id="product-buy" type="text" name="productBuy" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Vui lòng nhập mã sản phẩm')" required>
                        <label for="product-buy">Mua Vào</label>
                    </div>

                    <div class="input-field">
                        <input id="product-sell" type="text" name="productSell" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Vui lòng nhập mã sản phẩm')" required>
                        <label for="product-sell">Bán Ra</label>
                    </div>

                    <div class="input-field">
                        <input id="product-promotion" type="text" name="productPromotion">
                        <label for="product-promotion">Khuyến Mại-Chon tu combox</label>
                    </div>

                    <div class="input-field file-field image-input">
                        <input id="file" type="file" name="userPhoto" required="" accept="image/*" multiple>
                        <div class="file-path-wrapper">
                            <input class="file-path" type="text" placeholder="Chọn hình ảnh cho sản phẩm">
                        </div>
                    </div>

                    <div class="input-field">
                        <div id="product-video" class="chips chips-placeholder"></div>
                    </div>
    
                    <div class="file-field margin-top-20">
                        <p class="grey-text">Mo ta chi tiet</p>
                        <textarea id="editor" name="editor"></textarea>
                    </div>

                    <div class="margin-top-20">
                        <input type="submit" value="Thêm" class="btn bottom" id="btn-add">
                        <div id="status"></div>
                        <div id="progress" class="progress">
                            <div class="indeterminate"></div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>